@model object

@<img width="75" height="75" src="@Url.Action("GetImage", "Admin", new { productId = ViewData["imgs"] })"/>

@(Html.Kendo().Upload()
    .Name("image")
    .Async(a => a
            .Save("SaveImage", "Admin")
            .Remove("RemoveImage", "Admin")
            .SaveField("image")
    )
    .Validation(validation => validation.AllowedExtensions(new string[] { ".jpg", ".png" }).MaxFileSize(3145728))
)
